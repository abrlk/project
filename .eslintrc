{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "class-methods-use-this": 0,
        "no-param-reassign": 1,
        "no-console":0,
        "no-tabs": 0,
        "no-nested-ternary": 0,
        "no-unused-vars": 1,
        "no-debugger": 1,
        "object-curly-newline": 0,
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}